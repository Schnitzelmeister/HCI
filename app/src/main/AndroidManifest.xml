<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uniwien.gesunderleben">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application android:name="com.example.uniwien.gesunderleben.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityLauncher"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:label="@string/title_activity_main" android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".UserData0" />
        <activity android:name=".UserData1" />
        <activity android:name=".UserData2" />
        <activity android:name=".UserData3" />
        <activity android:name=".UserData4" />
        <activity
            android:parentActivityName=".MainActivity"
            android:name=".mainFunctions.BurnedCalorieCalculatorImpl" />
        <activity
            android:parentActivityName=".MainActivity"
            android:name=".mainFunctions.DailyCalorieRequirementImpl" />
        <activity
            android:parentActivityName=".MainActivity"
            android:name=".mainFunctions.CalorieCounterImpl" />
        <activity android:name=".FortschrittActivity" />
        <activity android:name=".ZeitplanActivity" />
        <activity android:name=".Planner" />
    </application>

</manifest>